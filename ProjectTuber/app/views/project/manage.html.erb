<% if @projects %>
    <% @projects.each do |project| %>
        <div class="row">
          <div class="col s12 center-align">
            <h2>
              <%= project.title %>
            </h2>
          </div>
          <div class="col s12">
            <strong class="larger_font">
              "<%= project.description %>"
            </strong>
          </div>
          <div class="col s6">
            <a class="repo_link" href="<%= project.link_to_source %>">&ltCOde&gt</a>
          </div>
          <% if project.images.length != 0 %>
              <div class="col s12">
                <% project.images.each do |image| %>
                    <div class="col s4">
                      <img class="img-thumbnail responsive-img" src="<%= image.file_path %>"/>
                    </div>
                <% end %>
              </div>
          <% end %>
        </div>
        <%= form_for(:project, :url => {:action => 'manage'}) do |f| %>
            <input type="text" value="<%= project.id%>" name="id" />

            <input type="submit" value="Del" class="red darken-4 white-text btn-floating"/>
            <%end%>
        <hr/>
    <% end %>
    <%= will_paginate @projects %>
<% else %>
    <h2>No projects yet</h2>
<% end %>